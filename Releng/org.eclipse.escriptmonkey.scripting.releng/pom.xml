		<module>
			../../Plugins/integration/org.eclipse.escriptmonkey.scripting.integration.modeling.uml
		</module>
		<module>
			../../Plugins/integration/org.eclipse.escriptmonkey.scripting.integration.modeling.uml.examples
		</module>
		
		
		
		
		
		
		<!-- Features -->
		<module>
			../../Features/org.eclipse.ease.core.feature
		</module>
		<module>
			../../Features/org.eclipse.ease.core.ui.feature
		</module>
		<module>
			../../Features/org.eclipse.ease.integration.modeling.feature
		</module>
		<module>
			../../Features/org.eclipse.ease.integration.modeling.papyrus.feature
		</module>
		<module>
			../../Features/org.eclipse.ease.integration.modeling.uml.feature
		</module>
		<module>
			../../Features/org.eclipse.ease.javascript.feature
		</module>
		<module>
			../../Features/org.eclipse.ease.modules.feature
		</module>
		<module>
			../../Features/org.eclipse.ease.python.feature
		</module>
		
		<!-- Update site -->
		<module>
			../org.eclipse.escriptmonkey.scripting.releng.p2
		</module>
		
	</modules>
	
	
</project>  